<Window x:Class="BudgetPlaner.FixkostenBearbeiten"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fixkosten Bearbeiten" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Liste der Fixkosten -->
        <ListBox x:Name="FixkostenListe" Margin="10" DisplayMemberPath="Beschreibung" />

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Hinzufuegen" Click="Hinzufuegen_Click" Margin="5" />
            <Button Content="Bearbeiten" Click="Bearbeiten_Click" Margin="5" />
            <Button Content="Loeschen" Click="Loeschen_Click" Margin="5" />
            <Button Content="Speichern" Click="Speichern_Click" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
